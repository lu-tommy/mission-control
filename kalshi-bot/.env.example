# Kalshi Trading Bot Configuration Example
# Copy this file to .env and fill in your actual values

# Kalshi API Credentials
# Get these from https://kalshi.com/docs/api
KALSHI_API_KEY_ID=your_api_key_id_here
KALSHI_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Trading Parameters
MARKET_VOLUME_THRESHOLD=1000
POSITION_SIZE=10
MIN_SPREAD_CENTS=2

# Bot Settings
SCAN_INTERVAL_SECONDS=300
MAX_MARKETS_TO_SCAN=10
TOP_MARKETS_TO_TRADE=5

# Risk Management
MAX_POSITIONS_PER_MARKET=1
MAX_DAILY_TRADES=50

# Logging
LOG_LEVEL=INFO
